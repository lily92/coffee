				// 			})
				// 			// 	window.location = _this.tui.interfaceUrl() + "/#//pages/extend-view/mall-extend/myOrder/myOrder?currentTab=2";           
				// 		}, 500)
				// 		console.log('success:' + JSON.stringify(res));
				// 	},
				// 	fail: function(err) {
				// 		console.log('fail:' + JSON.stringify(err));
				// 	}
				// });

